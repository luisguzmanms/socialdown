<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_images"
        android:background="@color/transparent_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:SpinKit_Style="DoubleBounce"
            android:layout_gravity="center"
            app:SpinKit_Color="#7AC9C9C9" />

        <ImageView
            android:id="@+id/iv_images"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="centerCrop"
            android:background="@drawable/gradiant_media_grey" />

        <ImageView
            android:id="@+id/iv_imageSelected"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="#74242C33" />

        <ImageView
            android:id="@+id/iv_typePost"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_check"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:buttonTint="#E8E8E8"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="20dp">

                <TextView
                    android:background="@drawable/bg_counter"
                    android:id="@+id/tv_countCarousel"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="#A5A5A5"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="0/0"></TextView>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>